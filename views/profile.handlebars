{{! Use the main layout }}
{{!< main }}

<div class="profile-container">
    <div class="profile-avatar">
        <!-- Display the user's avatar -->
        <img src="{{#if user.avatar_url}}
                      {{user.avatar_url}}
                  {{else}}
                      /avatar/{{user.username}}
                  {{/if}}" alt="User Avatar">
    </div>
    
    <section class="profile-info">
        <!-- Display user profile info -->
        <h2>{{user.username}}</h2>
        <p>Member Since: {{user.memberSince}}</p>
    </section>
</div>

<section class="user-posts">
    <!-- Display a custom title for the user's posts -->
    <h2>Your {{{postNeoType}}}s</h2>
    
    <!-- Conditional rendering of the user's posts -->
    {{#if posts.length}}
        <ul>
            {{#each posts}}
                <li class="post">
                    <h3>{{this.title}}</h3>
                    <p>{{this.content}}</p>
                    <p>Posted on: {{this.timestamp}}</p>
                    <p>Likes: {{this.likes}}</p>
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>You have not posted yet, poster.</p>
    {{/if}}
</section>
